<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- connect css files -->
    <link rel="stylesheet" href="/css/header-style.css" />
    <link rel="stylesheet" href="/css/loading-style.css" />
    <link rel="stylesheet" href="/css/admin-dashboard.css" />

    <!-- fontawesome -->
    <link rel="stylesheet" href="/css/fontawesome/css/all.min.css" />
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Merienda:wght@300..900&display=swap" rel="stylesheet" />
    <link rel="icon" href="/images/home.ico" />
    <title>Admin Dashboard</title>
</head>

<body>
    <!-- start preloading -->
    <div class="loader">
        <span class="text">YKPO Café</span>
        <span>
            <div class="one"><i class="fa-solid fa-cookie"></i></div>
            <div class="two"><i class="fa-solid fa-martini-glass-citrus"></i></div>
            <div class="three"><i class="fa-solid fa-pizza-slice"></i></div>
        </span>
    </div>
    <!-- end preloading -->

    <!-- start header -->
    <div class="header">
        <div class="header-container">
            <i class="fa-solid fa-bars" id="menu-icon"></i>
            <span class="logo"><a href="/home">YKPO Cafe</a>
            </span>
            <div class="right-header">
                <div class="user-name">hey <span class="name">Admin</span></div>

            </div>
        </div>
    </div>
    <div class="dashboard-container">
        <div class="aside">
            <ul>
                <li class="dashboard"><a href="dashboard"><i class="fa-solid fa-house"></i> dashboard</a></li>
                <li class="customers"><a href="users"><i class="fa-regular fa-user"></i> users</a></li>
                <li class="orders"><a href="orders"><i class="fa-solid fa-scroll"></i> orders</a></li>
                <li class="messages"><a href="messages"><i class="fa-regular fa-envelope"></i> messages</a></li>
                <li class="products"><a href="products"><i class="fa-solid fa-utensils"></i> products</a></li>
                <li class="profile"><a href="profile"><i class="fa-solid fa-user"></i> your profile</a></li>

            </ul>
            <button class="logout">logout <i class="fa-solid fa-arrow-right-from-bracket"></i></button>
        </div>
        <div class="content">
            <h1 class="dashboard-title">
                Dashboard
            </h1>
            <div class="statics">
                <div class="sales">
                    <i class="fa-solid fa-chart-line"></i>
                    <p class="title">
                        total sales
                        <br>
                        <span class="num"> <span>0</span> ₪</span>
                    </p>
                </div>
                <div class="total-orders">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <p class="title">
                        total orders
                        <br>
                        <span class="num"><span>0</span></span>
                    </p>
                </div>
                <div class="total-users">
                    <i class="fa-solid fa-users"></i>
                    <p class="title">
                        total users
                        <br>
                        <span class="num"><span>0</span></span>
                    </p>
                </div>
            </div>
            <div class="recent-reservation">
                <h1 class="title">reservations</h1>
                <div class="messages-table">
                </div>
            </div>
        </div>
    </div>
    <!-- end header -->

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/admin-dashboard.js"></script>
    <script src="/js/loading.js"></script>
    <script src="/js/admin-header.js"></script>
</body>

</html>